// Prisma schema for Supabase (PostgreSQL)
// You can add your models below; by default we create an example Note model
// that you can adapt or remove.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Category {
  // Deprecated: Categories are now client-side presets only
  // This model is intentionally left here for reference but will not be used.
  // You can drop this model from the database via migration; see generated migration.
  id        String   @id @default(uuid())
  name      String
  color     String   @default("#a3a3a3")
  icon      String   @default("Tag")
  sortOrder Int      @default(0)
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Note {
  id         String    @id @default(uuid())
  title      String
  content    String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  userId     String
  category   String    @default("Personal") // category name from client presets
}
